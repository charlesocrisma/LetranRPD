
@{
    Layout = "~/Views/Shared/_AdminNav.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="/css/admin/user.css" rel="stylesheet" type="text/css" />
    <title>Create User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="containerr">
        <h2 class="title">User Management</h2>
        <br />
        <div class="row mb-3">
            <div class="col-md-12">
                <button class="btn btn-primary">Student</button>
                <button class="btn btn-danger">Admin</button>
                <form action="#" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-success">Add User</button>
                </form>
            </div>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Student No.</th>
                    <th>Department</th>
                    <th>Role</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var users in Model)
                    {
                        <tr>
                            <td>@users.Name</td>
                            <td>@users.Email</td>
                            <td>@users.StudentNo</td>
                            <td>@users.Department</td>
                            <td>@users.Role</td>
                            <td>
                                <a href="@Url.Action("Edit", "Home", new { id = users.StudentNo })" class="btn btn-warning btn-sm">Edit</a>
                            </td>
                            <td>
                                <form method="post" action="@Url.Action("Delete", "Home", new { id = users.StudentNo })" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
