			 const interval = setInterval(() => {
				 progress += Math.random() * 15;
				 if (progress >= 100) {
					 progress = 100;
					 clearInterval(interval);

					 // Mark files as uploaded
					 unuploadedFiles.forEach(fileObj => {
						 fileObj.uploaded = true;
						 uploadedFiles.push(fileObj);
					 });

					 // Update display
