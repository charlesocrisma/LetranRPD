			document.querySelectorAll('.ticket').forEach(ticket => {
				ticket.classList.remove('active');
			});

			// Add active class to clicked ticket
			event.currentTarget.classList.add('active');

			// Update remarks content
			const ticket = ticketData[ticketId];
			document.getElementById('remarks-content').innerHTML = ticket.remarks;
			document.getElementById('remarks-subtitle').innerHTML =
				`Comments for: ${ticket.title} (${ticketId})`;
		}

</script>
